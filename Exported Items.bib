@article{zink_longitudinal_2024,
	title = {Longitudinal associations of screen time, physical activity, and sleep duration with body mass index in {U}.{S}. youth},
	volume = {21},
	issn = {1479-5868},
	url = {https://ijbnpa.biomedcentral.com/articles/10.1186/s12966-024-01587-6},
