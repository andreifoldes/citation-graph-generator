@article{ma_network_2022,
	title = {Network {Analysis} of {Time} {Use} and {Depressive} {Symptoms} {Among} {Emerging} {Adults}: {Findings} {From} the {Guizhou} {Population} {Health} {Cohort} {Study}},
	volume = {13},
