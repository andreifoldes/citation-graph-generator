	number = {1},
	urldate = {2025-03-10},
	journal = {International Journal of Behavioral Nutrition and Physical Activity},
	author = {Zink, Jennifer and Booker, Robert and Wolff-Hughes, Dana L. and Allen, Norrina B. and Carnethon, Mercedes R. and Alexandria, Shaina J. and Berrigan, David},
